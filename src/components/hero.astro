---
import { Picture } from "astro:assets";
import heroImage from "@/assets/cartel.jpeg";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      HispaCon 2025
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Evento nacional de Fantasía, Ciencia Ficción y Terror. Del 19 al 21 de septiembre en Sabadell.
    </p>
    <div class="mt-6 flex flex-col items-center sm:flex-row">
      <Icon class="text-gray-400 w-8 h-8" name="uil:map-marker" />
      <p>Casal Pere Quart - Rambla, 69 - 08202, Sabadell</p>
    </div>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://web3templates.com/templates/astroship-starter-website-template-for-astro"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        Visita nuestro Patreon
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/surjithctly/astroship"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        Últimas noticias
      </Link>
    </div>
  </div>
</main>
