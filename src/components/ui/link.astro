---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  outline: "bg-(--main-bg-color) border-2 border-black hover:bg-(--button-hover-color) text-black ",
  primary: "bg-(--button-color) text-black hover:bg-(--button-hover-color)  border-2 border-transparent",
  inverted: "bg-(--main-bg-color) text-black border-2 border-transparent",
  muted: "bg-gray-100 hover:bg-(--button-hover-color) border-2 border-transparent",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-sm text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
